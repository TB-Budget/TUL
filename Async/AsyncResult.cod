class "Отложенный результат выполнения";

inclass

inobject
  id: String; --кеш для сверки
  postprocess: FuncObj; --Дополнительная обработка результата

  func Equal(ob:AsyncResult):Logical;
    if ob = nil then
       return False;
    end;
    Result = (ob.id = self.id);
  end;

  func ready:Logical;
    SetError(0, 'Abstract method');
    Result = false;
  end;

  proc Wait;
    --Дожидаемся результата
     while not ready do
       sleep(1);
       --UIWait.ExecuteDialog;
    od;
  end;

  func Get_:Variant;
    --Это безопасные куски, их можно писать помногу, но лучше иметь в начале
    self.Wait;
  end;

  Proc Abort;
    id = nil;
  end;


end