class inherited FuncObj "Последовательное применение функций (декаррирование)";

inclass
  func CreateEx(first: FuncObj; second: FuncObj=nil): Wrap;
    Result = inherited Create;
    result.Stack[1] = first;
    if second <> nil then
       result.Stack[2] = second;
    end;
  end;
inobject
   var Stack[]: FuncObj;

   func Вызвать synonym Call(Params:Variant[]):Variant;
   var i: Integer;
   var args: Variant[];
     args = Params;
     for i = 1 .. LengthOfArray(Stack) do
         args = [AsyncTools.SyncCall(Stack[i], args)];
     od;
     return args[1];
   end;

end