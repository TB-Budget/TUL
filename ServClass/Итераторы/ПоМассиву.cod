class inherited Итераторы.Итератор "Перебот всего массива" synonym OnArray;

inclass
  func New(myarr: Variant[]): Итераторы.OnArray;
    Result = create;
    Result.myarr = myarr;
  end;

inobject private
  var myarr: Variant[];
  var mypos: Integer;

inobject public
  func Текущий synonym Current: Variant;
     -- Возвращает текущий элемент итератора
     return myarr[mypos];
  end;

  func НаСледующий synonym MoveNext: Logical;
     -- Переводит указатель на следующий элемент и возващает Истина
     -- Если это невозможно - возвращает Ложь
     mypos = mypos + 1;
     -- TODO: кешировать длину
     if LengthOfArray(myarr) < mypos then
        return False;
     else
        return True;
     end;
  end;

  func Сброс synonym Reset: Logical;
     mypos = 0;
     return true;
  end;

end