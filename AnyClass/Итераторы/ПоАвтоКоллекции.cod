class inherited Итераторы.Итератор "Перебор всего массива" synonym OnAutoEnum;
const S_OK: Integer = 0;
inclass
  func New(myAO: AutoObject): Итераторы.OnAutoEnum;
    Result = create;
    --На будущее - проверить ENUM или генератор ENUMов
    Result.enum = myAO._NewEnum;
  end;

inobject private
  var enum: AutoObject;
  var cur_buf: Variant;

inobject public
  func Текущий synonym Current: Variant;
     -- Возвращает текущий элемент итератора
     return self.cur_buf;
  end;

  func НаСледующий synonym MoveNext: Logical;
     -- Переводит указатель на следующий элемент и возващает Истина
     -- Если это невозможно - возвращает Ложь
     var tmpI: Integer;
     var tmpV: Variant;
     if enum.Next(1, tmpV, tmpI) = S_OK:
        self.cur_buf = tmpV;
        return True;
     else
        return False;
     fi;
  end;

  func Сброс synonym Reset: Logical;
     if self.enum.Reset() = S_OK:
        return True;
     else
        return False;
     fi;
  end;

end